<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_line">
    <RelativeLayout
            android:padding="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/White_Snow">
            <ImageView
                android:id="@+id/img_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:layout_alignParentLeft="true"
                android:background="@drawable/wrong"
                />
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="新建档案"
                android:textSize="@dimen/sp_18"
                android:gravity="center_horizontal"
                android:textColor="@color/codoon_black_color"
                android:layout_toRightOf="@+id/img_cancel"
                android:layout_toLeftOf="@+id/img_save"
                />
            <ImageView
                android:id="@+id/img_save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:scaleType="center"
                android:background="@drawable/right"
                android:layout_alignParentRight="true"
                />
    </RelativeLayout>
    <ScrollView
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:paddingRight="10.0dip"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/White_Snow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/personal_on"
                    android:scaleType="center"/>
                <TextView
                    android:text="姓名"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/codoon_black_color"/>
                <EditText
                    android:id="@+id/edit_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入姓名"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textColor="@color/codoon_black_color"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_16"
                    android:background="@null"/>
                <EditText
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:hint="必填"
                    android:textSize="@dimen/sp_16"
                    android:layout_gravity="center_vertical"
                    />
            </LinearLayout>
            <!-- 性别-->
            <LinearLayout

                android:paddingRight="10.0dip"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/White_Snow"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/sex"
                    android:scaleType="center"/>
                <TextView
                    android:text="性别"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/codoon_black_color"/>
                <RadioGroup
                    android:id="@+id/radio_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1">
                    <RadioButton
                        android:id="@+id/radio_man"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="男"
                        android:textSize="@dimen/sp_16"
                        android:textColor="@color/codoon_black_color"/>
                    <RadioButton
                        android:id="@+id/radio_woman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/codoon_black_color"
                        android:textSize="@dimen/sp_16"
                        android:text="女"/>
                </RadioGroup>

            </LinearLayout>
            <!-- 年龄-->
            <LinearLayout

                android:paddingRight="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/White_Snow"
                >
                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/age"
                    android:scaleType="center"/>
                <TextView
                    android:text="年龄"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/codoon_black_color"/>
                <EditText
                    android:id="@+id/edit_age"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入年龄"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textColor="@color/codoon_black_color"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_16"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 手机-->
            <LinearLayout

                android:paddingRight="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@color/White_Snow"
                android:layout_marginTop="@dimen/dp_10"
                >
                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/mobile"
                    android:scaleType="center"/>
                <TextView
                    android:text="手机"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/codoon_black_color"/>
                <EditText
                    android:id="@+id/edit_phone_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入手机号码"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textColor="@color/codoon_black_color"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_16"
                    android:background="@null"/>
            </LinearLayout>
            <!-- 备注-->
            <LinearLayout

                android:paddingRight="10.0dip"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/White_Snow"
                >
                <ImageView
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_50"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:src="@drawable/remark"
                    android:scaleType="center"/>
                <TextView
                    android:text="备注"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_18"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/codoon_black_color"/>
                <EditText
                    android:id="@+id/edit_remark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="请输入备注"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_weight="1"
                    android:textColor="@color/codoon_black_color"
                    android:layout_gravity="center_vertical"
                    android:textSize="@dimen/sp_16"
                    android:background="@null"/>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
    <!-- 姓名-->

</LinearLayout>