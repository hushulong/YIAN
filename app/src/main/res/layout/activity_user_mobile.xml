<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gray_line"
    >
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White_Snow">
        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:layout_alignParentLeft="true"
            android:background="@drawable/wrong"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号码"
            android:textSize="@dimen/sp_18"
            android:gravity="center_horizontal"
            android:textColor="@color/codoon_black_color"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dp_10"
        android:paddingBottom="@dimen/dp_20"
        android:paddingTop="@dimen/dp_20">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="更换手机号后，下次登录可使用新手机号登录"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/grey_8e"/>
        <TextView
            android:id="@+id/tv_current_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_8e"
            android:textSize="@dimen/sp_14"
            android:text="当前手机号：18305170646"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:background="@drawable/boder_layout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="国家/地区"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/codoon_black_color"/>
        <EditText
            android:id="@+id/edit_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="中国"
            android:background="@color/White_Snow"
            android:textColor="@color/codoon_black_color"
            android:layout_marginLeft="@dimen/dp_30"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:background="@drawable/boder_layout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="+86"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/codoon_black_color"/>
        <EditText
            android:id="@+id/edit_mobile_num"
            android:hint="请输入新的手机号"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@color/White_Snow"
            android:layout_marginLeft="@dimen/dp_30"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dp_10"
        android:background="@drawable/boder_layout"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="验证码"
            android:textSize="@dimen/sp_16"
            android:textColor="@color/codoon_black_color"
            />
        <EditText
            android:id="@+id/edit_code_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/dp_30"
            android:hint="请输入验证码"
            android:background="@color/White_Snow"/>

        />
    </LinearLayout>
    <Button
        android:id="@+id/bt_get_code"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="获取验证码"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:background="@color/red_dark"
        android:layout_margin="@dimen/dp_10"
        />
    <Button
        android:id="@+id/bt_post"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/white"
        android:background="@color/red_dark"
        android:layout_margin="@dimen/dp_10"
        />
</LinearLayout>