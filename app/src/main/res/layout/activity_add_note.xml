<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White_Snow">
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:id="@+id/img_back"
            android:scaleType="center"
            android:layout_centerVertical="true"
            android:background="@drawable/back"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_18"
            android:text="笔记"
            android:gravity="center_horizontal"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/codoon_black_color"/>
        <Button
            android:id="@+id/bt_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提交"
            android:textSize="@dimen/sp_18"
            android:background="@color/White_Snow"
            android:textColor="@color/codoon_black_color"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_01"
        android:background="@color/grey_8e">

    </View>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/dp_10"
        android:layout_height="wrap_content"
        android:text="五味子"
        android:textSize="@dimen/sp_18"
        android:textColor="@color/codoon_black_color"/>
    <EditText
        android:id="@+id/edit_note"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:padding="@dimen/dp_10"
        android:textScaleX="1"
        android:lineSpacingExtra="@dimen/sp_8"
        android:minLines="10"
        android:hint="请补充历代大家，中医教材对该药的注解，或者是植物形态，鉴别经验，炮制工艺，使用经验等"
        android:textColor="@color/codoon_black_color"
        android:textSize="@dimen/sp_16"
        android:gravity="left|top"
        android:background="@drawable/boder_layout"/>
</LinearLayout>