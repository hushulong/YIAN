<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/gray_line"
        android:orientation="vertical"
        android:id="@+id/fragmentOne">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="经典"
            android:textSize="@dimen/sp_18"
            android:padding="@dimen/dp_10"
            android:gravity="center_horizontal"
            android:textColor="@color/codoon_black_color"
            android:background="@color/White_Snow"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/dp_01"
            android:background="@color/grey_8e">

        </View>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/gray_line"
            android:orientation="vertical">
            <!--<EditText-->
                <!--android:id="@+id/search_edit"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:hint="搜索框"/>-->
            <com.graduatedesign.hsl.yian.misc.MyGridView
                android:id="@+id/grid_classical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:numColumns="3"
                android:horizontalSpacing="@dimen/dp_1"
                android:verticalSpacing="@dimen/dp_1"
                android:gravity="center"
                android:stretchMode="columnWidth"
                >

            </com.graduatedesign.hsl.yian.misc.MyGridView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>