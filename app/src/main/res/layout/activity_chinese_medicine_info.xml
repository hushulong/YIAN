<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/fragment_tabmain"
    tools:context="com.graduatedesign.hsl.yian.activitys.ChineseMedicineInfoActivity">
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/boder_layout">
    <ImageView
        android:id="@+id/img_back"
        android:scaleType="center"
        android:layout_centerVertical="true"
        android:background="@drawable/back"
        android:layout_alignParentLeft="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_medicine_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:text=""
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textColor="@color/codoon_black_color"/>
    <ImageView
        android:id="@+id/img_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="center"
        android:background="@drawable/note"
        android:layout_alignParentRight="true"
        />
    </RelativeLayout>
    <com.njucm.cmdh.viewpager.indicator.FixedIndicatorView
        android:id="@+id/tabmain_indicator"
        android:layout_width="match_parent"
        android:background="@color/White_Snow"
        android:layout_height="@dimen/dp_50" />

    <android.support.v4.view.ViewPager
        android:id="@+id/tabmain_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/White_Snow"
        android:layout_weight="1" />

</LinearLayout>