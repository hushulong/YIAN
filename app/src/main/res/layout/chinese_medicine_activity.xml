<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chinese_medicine_main_layout"
    tools:context=".activitys.ChineseMedicineActivity">
    <RelativeLayout
        android:padding="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/White_Snow">
        <ImageView
            android:id="@+id/img_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:layout_alignParentLeft="true"
            android:background="@drawable/back"
            />
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="药"
            android:textSize="@dimen/sp_18"
            android:gravity="center_horizontal"
            android:textColor="@color/codoon_black_color"
            android:layout_toRightOf="@+id/img_back"
            android:layout_toLeftOf="@+id/img_search"
            />
        <ImageView
            android:id="@+id/img_search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:background="@drawable/iconfont_sousuo"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
    <!--<LinearLayout-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="@dimen/dp_01"-->
        <!--android:background="@drawable/gray_line">-->

    <!--</LinearLayout>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/White_Snow">
        <Button
            android:id="@+id/xing_wei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/boder_layout"
            android:layout_weight="1"
            android:text="性味"
            android:textColor="@color/codoon_black_color"
            />

        <Button
            android:id="@+id/gongxiao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/boder_layout"
            android:text="功效"
            android:textColor="@color/codoon_black_color"
            />

        <Button
            android:id="@+id/san_pin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="三品"
            android:background="@drawable/boder_layout"
            android:textColor="@color/codoon_black_color"
            />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/search_string"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:background="@color/White_Snow"
        android:visibility="gone"
        >
        <TextView
            android:id="@+id/tv_search_string"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/search_clear"
            android:textSize="@dimen/sp_16"
            android:text=""
            android:textColor="@color/codoon_black_color"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/search_clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/wrong"
            android:layout_marginRight="@dimen/dp_15"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
    <FrameLayout
        android:id="@+id/list_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px" />

</LinearLayout>

